<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_field_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/text_field_shape</item>
    </style>

    <style name="main_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="text_area" parent="text_field_style">
        <item name="android:gravity">top|left</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="mini_fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
</resources>